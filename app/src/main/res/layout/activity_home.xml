<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nabux.projectgogo.HomeActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txv_hi"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="步數里程圖"
        android:id="@+id/btnstep"
        android:layout_below="@+id/txv_hi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bmi變化圖"
        android:id="@+id/btnbmi"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnstep"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnstep"
        android:layout_alignEnd="@+id/btnstep" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="血壓記錄圖"
        android:id="@+id/btnhg"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/btnbmi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnhelp"
        android:layout_alignEnd="@+id/btnhelp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的健康報告"
        android:id="@+id/btnreport"
        android:layout_below="@+id/btnhg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/btnhelp"
        android:layout_alignEnd="@+id/btnhelp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的健康小幫手"
        android:id="@+id/btnhelp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/btnreport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnbmi"
        android:layout_alignEnd="@+id/btnbmi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="辨識功能"
        android:id="@+id/btn_ocr"
        android:layout_below="@+id/btnhelp"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/btnhelp"
        android:layout_alignEnd="@+id/btnhelp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
